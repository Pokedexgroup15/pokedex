<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/searchButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        android:onClick="loadSearch"
        android:text="@string/search"
        app:layout_constraintBaseline_toBaselineOf="@+id/filterButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Pokedex"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Pokédex"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pokédex"
        tools:visibility="visible" />

    <Button
        android:id="@+id/filterButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:background="#00FFFFFF"
        android:onClick="loadFilter"
        android:text="🗄️"
        app:layout_constraintStart_toEndOf="@+id/Pokedex"
        app:layout_constraintTop_toTopOf="@+id/Pokedex" />
</androidx.constraintlayout.widget.ConstraintLayout>